<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <View
        android:id="@+id/view5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.33"
        android:background="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="75dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:alpha="0.75"
            android:background="@android:color/background_light"
            android:padding="10dp"
            android:text="@string/writing_intro"
            android:textSize="18sp" />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="75dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:alpha="0.75"
            android:background="@android:color/background_light"
            android:padding="10dp"
            android:text="@string/writing_q_date"
            android:textSize="18sp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="69dp">

            <TextView
                android:id="@+id/txtdate"
                android:layout_width="253dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:alpha="0.75"
                android:background="@android:color/background_light"
                android:padding="10dp"
                android:text="2018-10-24"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnchangedate"
                android:layout_width="64dp"
                android:layout_height="58dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@android:drawable/ic_menu_month"
                android:onClick="OnDatePickerClicked"
                android:text="날짜 대화상자"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </TableRow>

        <Button
            android:id="@+id/writingfirstbutton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:text="0/3" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>